{
	"compilerOptions": {
		"outDir": "./dist/",
		"sourceMap": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"module": "esnext",
		"moduleResolution": "node",
		"target": "es6",
		"jsx": "react",
		"allowJs": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"newLine": "LF",
		"noImplicitThis": true,
		"pretty": true,
		"strict": true,
		"importHelpers": true,
		"baseUrl": "src",
		"paths": {
			"@core": ["core/index"],
			"@main-components": ["main-components/index"],
			"@common-components": ["common-components/index"],
			"@modules": ["modules/index"],
			"@utils": ["utils/index"]
		}
	},
	"include": ["./src/**/*"],
	"exclude": ["node_modules"]
}
